<h3 class="recent-articles-header">Recent Posts</h3>
<nav class="recent-articles">
    {% for post in site.posts limit: 5 %}
        {% assign current = nil %}
        {% if page.url == post.url %}
            {% assign current = "current" %}
        {% endif %}

        <li class="{{ current }}"><a href="{{ post.url }}">{{ post.title }}</a></li>
    {% endfor %}
    <li class="all"><a href="/posts.html">More</a></li>
</nav>
